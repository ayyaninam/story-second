{
	"name": "authorly-ai",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"update:env": "op inject -i gen.env -o .env",
		"build": "node homepage-builder.js && node tiktok-builder.js && next build",
		"start": "next start",
		"lint": "next lint",
		"build:webflow": "nodemon --exec 'node homepage-builder.js' --watch './src/features/landing/*' -e tsx",
		"build:tiktok": "nodemon --exec 'node tiktok-builder.js' --watch './src/features/tiktok/*' -e tsx",
		"api:generate-types": "npx openapi-typescript https://api.staging.story.com/swagger/v1/swagger.json -o ./src/api/schema/main.d.ts && npx openapi-typescript https://ml.staging.story.com/openapi.json -o ./src/api/schema/ml.d.ts",
		"format": "prettier . --write",
		"prepare": "husky && husky install"
	},
	"dependencies": {
		"@auth0/nextjs-auth0": "^3.5.0",
		"@hookform/resolvers": "^3.3.4",
		"@radix-ui/react-avatar": "^1.0.4",
		"@radix-ui/react-dialog": "^1.0.5",
		"@radix-ui/react-dropdown-menu": "^2.0.6",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-radio-group": "^1.1.3",
		"@radix-ui/react-select": "^2.0.0",
		"@radix-ui/react-slider": "^1.1.2",
		"@radix-ui/react-slot": "^1.0.2",
		"@radix-ui/react-switch": "^1.0.3",
		"@remotion/gif": "4.0.106",
		"@remotion/media-utils": "4.0.106",
		"@remotion/player": "4.0.106",
		"@remotion/transitions": "4.0.106",
		"@stripe/react-stripe-js": "^1.16.2",
		"@stripe/stripe-js": "^1.46.0",
		"@t3-oss/env-nextjs": "^0.8.0",
		"@tanstack/react-query": "^5.17.19",
		"@types/uuid": "^9.0.8",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.0",
		"dayjs": "^1.11.10",
		"dotenv": "^16.4.1",
		"ky": "^1.2.0",
		"lodash": "^4.17.21",
		"lucide-react": "^0.316.0",
		"nanoid": "^5.0.5",
		"next": "14.1.0",
		"next-themes": "^0.2.1",
		"p-limit": "^5.0.0",
		"react": "^18",
		"react-hook-form": "^7.49.3",
		"react-hot-toast": "^2.4.1",
		"react-input-autosize": "^3.0.0",
		"remotion": "4.0.106",
		"stripe": "^14.17.0",
		"tailwind-merge": "^2.2.1",
		"tailwindcss-animate": "^1.0.7",
		"use-immer": "^0.9.0",
		"usehooks-ts": "^2.10.0",
		"uuid": "^9.0.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@tanstack/eslint-plugin-query": "^5.17.22",
		"@types/lodash": "^4.14.202",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@types/react-input-autosize": "^2.2.4",
		"autoprefixer": "^10.0.1",
		"esbuild": "^0.20.0",
		"eslint": "^8",
		"eslint-config-next": "14.1.0",
		"eslint-config-prettier": "^9.1.0",
