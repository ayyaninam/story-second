		"react-dom": "^18.2.0",
		"tailwindcss": "^3.3.0",
		"typescript": "^5"
	},
	"lint-staged": {
		"*.{ts,tsx}": "eslint --cache --fix",
		"*.--write": "prettier --write"
	},
	"pnpm": {
		"patchedDependencies": {
			"@remotion/player@4.0.106": "patches/@remotion__player@4.0.106.patch"
		}
	}
}
